{
  "name": "Cookie Max Lifetime",
  "author": "Morris Horesh",
  "version": "1.1.2",
  "description": "Limit cookie lifetime",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>", "cookies", "storage", "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
